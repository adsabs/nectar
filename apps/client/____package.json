{
  "name": "client",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsc -p tsconfig.server.json && PORT=8000 NODE_ENV=development node dev/server.js | pino-pretty --colorizedObjects=false -S",
    "dev:turbo": "PORT=8000 next dev --turbo | pino-pretty --colorizeObjects=false -S",
    "dev:mocks": "NEXT_PUBLIC_API_MOCKING=enabled PORT=8000 next dev | pino-pretty --colorizeObjects=false -S",
    "build": "pnpm build-bibstem-index && NODE_ENV=production NEXT_TELEMETRY_DISABLED=1 STANDALONE=1 DIST_DIR=./dist/ next build",
    "build:local": "pnpm build-bibstem-index && NEXT_TELEMETRY_DISABLED=1 DIST_DIR=./dist/ next build",
    "start": "NODE_ENV=production PORT=8000 DIST_DIR=./dist/ node dist/standalone/server.js",
    "start:local": "NODE_ENV=production PORT=8000 DIST_DIR=./dist/ next start",
    "analyze": "pnpm build-bibstem-index && NEXT_TELEMETRY_DISABLED=1 DIST_DIR=./dev/ ANALYZE=true next build",
    "test": "NODE_ENV=test vitest",
    "test:coverage": "NODE_ENV=test vitest --run --coverage",
    "integration": "playwright test --config=./playwright.config.ts",
    "storybook": "storybook dev -p 8001 --no-open --disable-telemetry",
    "build-storybook": "storybook build",
    "build-bibstem-index": "node ./scripts/gen-bibstem-index",
    "lint": "tsc --project ./tsconfig.json && eslint ."
  },
  "dependencies": {
  },
  "devDependencies": {
  },
  "volta": {
    "node": "18.15.0",
    "yarn": "1.22.19"
  },
  "lint-staged": {
    "**/*.ts(x)?": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  },
  "browserslist": [
    ">0.3%",
    "not dead"
  ]
}
