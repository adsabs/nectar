{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "lib": [
      "ESNext",
      "Dom"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "jest",
      "node",
      "@emotion/react/types/css-prop"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@server/*": [
        "../server/src/*"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "next-env.d.ts",
    "../../types/*",
    "types/*"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
