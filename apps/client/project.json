{
  "name": "client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "{projectRoot}/src",
  "prefix": "nectar",
  "targets": {
    "prebuild": {
      "cache": true,
      "executor": "@nx/next:build",
      "outputs": [
        "{projectRoot}/.next"
      ],
      "inputs": [
        "{projectRoot}/next.config.mjs",
        "{projectRoot}/public",
        "{projectRoot}/src/**/*"
      ],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "{projectRoot}/.next",
        "nextConfig": "{projectRoot}/next.config.mjs",
        "assetsPath": "{projectRoot}/public"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/dist/app"
      ],
      "dependsOn": [
        "prebuild",
        {
          "target": "build",
          "projects": "server"
        }
      ],
      "options": {
        "command": "apps/client/scripts/build.sh"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "eslintConfig": "apps/client/eslint.config.js"
      }
    }
  }
}
